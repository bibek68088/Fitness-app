<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loggedin"
        android:text="Log In"
        android:textColor="@color/textColor"
        android:gravity="center"
        android:textSize="40sp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@mipmap/logo4"
        android:id="@+id/logo"
        android:layout_below="@id/loggedin"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:hint="Email"
        android:textColorHint="@color/textColor"
        android:drawableLeft="@mipmap/email"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textColor="@color/textColor"
        android:layout_margin="10dp"
        android:layout_below="@id/logo"
        android:background="@drawable/edittext_background" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:hint="Password"
        android:drawableLeft="@mipmap/password"
        android:drawableRight="@mipmap/show"
        android:textColorHint="@color/textColor"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textColor="@color/textColor"
        android:layout_margin="10dp"
        android:layout_below="@id/email"
        android:background="@drawable/edittext_background" />

    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/login_button"
        android:text="LOG IN"
        android:padding="20dp"
        android:textSize="18sp"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/home"
        android:background="@drawable/button_background"
        android:layout_margin="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgotPassword"
        android:textColor="@color/home"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:layout_below="@id/login_button"
        android:text="Forgot Password?"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noAccount"
        android:text="Don't have an account?"
        android:textColor="@color/textColor"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_up_new"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/noAccount"
        android:text="Sign Up"
        android:textColor="@color/home" />



</RelativeLayout>
